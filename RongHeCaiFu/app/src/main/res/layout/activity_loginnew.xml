<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/base_titlebar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:src="@drawable/loginimg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@drawable/textbg"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--android:phoneNumber="true"-->
            <EditText
                android:id="@+id/et_uname"
                style="@style/login_page_et_style"

                android:hint="@string/text_input_uname_hint" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/shanchu"
                android:clickable="true"
                android:scaleType="fitCenter" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#c6c6c6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pwd"
                style="@style/login_page_et_style"
                android:hint="@string/text_input_pwd_hint"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/eye1"
                android:clickable="true"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#c6c6c6"/>

        <LinearLayout
            android:id="@+id/lt_txyzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_txyzm"
                style="@style/login_page_et_style"
                android:hint="@string/text_input_txyzm_hint"
                android:numeric="integer"/>

            <ImageView
                android:id="@+id/iv_txyzm"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:clickable="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        style="@style/login_btn_style"
        android:layout_marginTop="70dp"
        android:text="@string/text_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_20dp"
            android:layout_marginTop="@dimen/text_size_18dp"
            android:text="还没账号？"/>
        <TextView
            android:id="@+id/tv_ljzc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_marginTop="@dimen/text_size_18dp"
            android:textColor="@color/titlebar_bg_color"
            android:clickable="true"
            android:text="立即注册"/>
        <TextView
            android:id="@+id/tv_wjmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_18dp"
            android:textColor="@color/titlebar_bg_color"
            android:text="忘记密码"
            android:gravity="end"
            android:clickable="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="@dimen/text_size_20dp"
            />
    </LinearLayout>

</LinearLayout>
