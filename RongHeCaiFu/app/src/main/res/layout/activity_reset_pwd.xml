<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_white">

    <include layout="@layout/base_titlebar"
        android:id="@+id/titlebar"/>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:fillViewport="true">-->

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_below="@id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:background="@color/color_ui_bg">

            <include layout="@layout/scrollview_header_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@color/color_white">

            <EditText
                android:id="@+id/et_yzm"
                style="@style/login_page_et_yzm_style"
                android:hint="@string/text_input_yzm_hint" />

            <Button
                android:id="@+id/btn_get_yzm"
                style="@style/btn_background_style"
                android:layout_marginLeft="5dp"
                android:text="@string/text_get_yzm" />
            </LinearLayout>
            <include
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/color_white">

                <ImageView
                    style="@style/gengduo_item_iv_style"
                    android:background="@drawable/suo"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/et_new_pwd1"
                    style="@style/login_page_et_style"
                    android:hint="@string/text_input_newpwd_hint" />

            </LinearLayout>

            <include
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/color_white">

                <ImageView
                    style="@style/gengduo_item_iv_style"
                    android:background="@drawable/suo"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/et_new_pwd2"
                    style="@style/login_page_et_style"
                    android:hint="@string/text_input_surepwd_hint" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_yy_yzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="@dimen/textfield_size_12"
                android:clickable="true"
                android:text="语音验证码"/>

            <Button
                android:id="@+id/btn_ok"
                style="@style/login_btn_style"
                android:text="@string/text_yes" />

        </LinearLayout>

    <ProgressBar
        android:id="@+id/submit_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
