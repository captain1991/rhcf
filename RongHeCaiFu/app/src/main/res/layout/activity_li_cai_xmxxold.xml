<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/base_titlebar" />

    <com.ayd.rhcf.view.pulltorefresh.PullToRefreshLayout
        android:id="@+id/refreshLayout"
        style="@style/pullto_refresh_layout_style"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.ayd.rhcf.view.pulltorefresh.PullableScrollView style="@style/pullto_refresh_scrollview_style">

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_20dp"
                    android:layout_marginTop="@dimen/text_size_20dp"
                    android:text="第三方合作机构"
                    android:textColor="@color/licai_item_text_color1"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_20dp"
                    android:layout_marginTop="@dimen/text_size_20dp"
                    android:lineSpacingMultiplier="1.25"
                    android:text="本项目由融和贷合作机构安徽巨元管理有限公司推荐提供，由安徽巨元投资管理有限公司法人先行发放给借款人"
                    android:textSize="@dimen/text_size_14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款人介绍"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/text_size_17sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/real_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_gravity="center_vertical"
                        android:text="真实姓名"/>
                </LinearLayout>
                <include layout="@layout/divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_gravity="center_vertical"
                        android:text="真实姓名"/>
                    <TextView
                        android:id="@+id/birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="出生"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
                <include layout="@layout/divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/marry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_gravity="center_vertical"
                        android:text="婚否"/>
                    <TextView
                        android:id="@+id/xueli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="学历"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
                <include layout="@layout/divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/work_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_gravity="center_vertical"
                        android:text="工作城市"/>
                    <TextView
                        android:id="@+id/house"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="有无购房"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
                <include layout="@layout/divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_15sp"
                        android:layout_gravity="center_vertical"
                        android:text="有无购车"/>
                    <TextView
                        android:id="@+id/work_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="工作年限"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
                <include layout="@layout/divider"/>
<!-- 》》》》》》》》》》》》》》》》》》暂时不用》》》》》》》》》》》》》》》-->
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/form_bg"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="抵押物类型："/>

                        <TextView
                            android:id="@+id/dywlx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:paddingLeft="10dp"
                            android:text=""/>
                    </LinearLayout>
                    <include layout="@layout/divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="评估价值："/>
                        <TextView
                            android:id="@+id/pgjz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:paddingLeft="10dp"
                            android:text=""/>
                    </LinearLayout>
                    <include layout="@layout/divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_qdsj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="@string/text_qdsj"/>
                    </LinearLayout>
                    <include layout="@layout/divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_sqed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="@string/text_sqed"/>
                    </LinearLayout>
                    <include layout="@layout/divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="情况描述："
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/qkms"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.ayd.rhcf.view.pulltorefresh.PullableScrollView>


    </com.ayd.rhcf.view.pulltorefresh.PullToRefreshLayout>

</LinearLayout>
