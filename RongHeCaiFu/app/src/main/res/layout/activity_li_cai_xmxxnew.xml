<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/base_titlebar" />

    <com.ayd.rhcf.view.pulltorefresh.PullToRefreshLayout
        android:id="@+id/refreshLayout"
        style="@style/pullto_refresh_layout_style"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.ayd.rhcf.view.pulltorefresh.PullableScrollView style="@style/pullto_refresh_scrollview_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/scrollview_header_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_13dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="@dimen/text_size_12dp"
                        android:background="@color/xmxx_list_title" />

                    <TextView
                        android:id="@+id/type_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="借款人介绍"
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/xxjs_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="@dimen/text_size_15dp"
                    android:text="信息介绍:"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/xxjs_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="4"
                    android:text="暂无信息"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/jzzk_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="@dimen/text_size_15dp"
                    android:text="工作状况:"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/gzzk_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="2"
                    android:text="暂无工作状况"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/zcjs_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="@dimen/text_size_15dp"
                    android:text="资产介绍:"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/zcjs_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="2"
                    android:text="暂无资产信息"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/jkyt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="@dimen/text_size_15dp"
                    android:text="借款用途及还款来源:"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/jsyt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_12dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="2"
                    android:text="暂无信息"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="vertical">

                    <include layout="@layout/scrollview_header_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_13dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="@dimen/text_size_12dp"
                            android:background="@color/xmxx_list_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="审核信息"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.ayd.rhcf.view.NoScrollGridView
                        android:id="@+id/gv_shxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingRight="@dimen/text_size_15dp"
                        android:listSelector="@android:color/transparent"
                        android:layout_marginTop="@dimen/text_size_13dp"
                        android:numColumns="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="vertical">

                    <include layout="@layout/scrollview_header_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_13dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="@dimen/text_size_12dp"
                            android:background="@color/xmxx_list_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="风控步骤"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fkbz_hzjg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_12dp"
                        android:layout_marginTop="21dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:maxLines="3"
                        android:text="合作机构审核:第三方合作机构对该项目进行全方位审查，严格筛选并优先进行放款"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/fkbz_rhdsh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_12dp"
                        android:layout_marginTop="21dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:maxLines="3"
                        android:text=""
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/fkbz_dyw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_12dp"
                        android:layout_marginTop="21dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:maxLines="3"
                        android:text=""
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"

                        android:src="@drawable/zhang" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结论：经风控部综合评估"
                            android:textSize="@dimen/text_size_15sp" />

                        <TextView
                            android:id="@+id/agree_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/zc_zzc_value_text_color"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="vertical">

                    <include layout="@layout/scrollview_header_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_13dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="@dimen/text_size_12dp"
                            android:background="@color/xmxx_list_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="权证信息"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（注：为保护借款人的个人隐私信息，实物材料对部分进行了隐藏处理）"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/qzxx_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="185dp" />
                        <ImageView
                            android:id="@+id/iv_next"
                            android:layout_width="24dp"
                            android:layout_height="40dp"
                            android:clickable="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/nav_right"/>

                        <ImageView
                            android:id="@+id/iv_previous"
                            android:layout_width="24dp"
                            android:layout_height="40dp"
                            android:clickable="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:rotation="180"
                            android:src="@drawable/nav_right"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </com.ayd.rhcf.view.pulltorefresh.PullableScrollView>
    </com.ayd.rhcf.view.pulltorefresh.PullToRefreshLayout>

</LinearLayout>
